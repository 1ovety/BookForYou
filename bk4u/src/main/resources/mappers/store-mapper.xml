	<!-- [공통] 오프라인 도서 검색 결과 개수 조회 (연지) -->
	<select id="selectSearchOffBookCount" resultType="_int">
		select count(*)
		  from (select bk_no, store_no, bk_title
			    from off_book
			    join book using (bk_no) 
		 		where store_no = #{condition}) b
 		 where bk_title like '%' || #{keyword} || '%'
	</select>
	
